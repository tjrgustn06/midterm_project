<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camp.s1.member.MemberDAO">

<insert id="setMemberJoin" parameterType="MemberDTO">
	INSERT INTO MEMBER
	VALUES(#(id), #(pw), #(name), #(phone), #(email), #(roleName), #(addressDTO), #(memberImgDTO))
	
</insert>

  	<select id="getMemberLogin" parameterType="MemberDTO" resultMap="getMemberResult">
  		SELECT M.*, A.* 
  		FROM MEMBER M
	    LEFT OUTER JOIN
	      ADDRESS A
	      ON (M.ID = A.ID)
      WHERE M.ID = #{id}
     </select>
     
      <resultMap type="MemberDTO" id="getMemberResult">
        <id column="ID" property="id"/>
        <result column="PW" property="pw"/>
        <result column="NAME" property="name"/>
        <result column="PHONE" property="phone"/>
        <result column="EMAIL" property="email"/>
        <result column="ADDRESS" property="address"/>
        <association javaType="AddressDTO" property="addressDTO">
           <id column="ADDRESSNUM" property="addressNum"/>
           <result column="ADDRESSNAME" property="addressName"/>
           <result column="ADDRESS" property="address"/>
           <result column="ADDRESSDTAIL" property="addressDetail"/>
           <result column="POSTCODE" property="postCode"/>
        </association>
     </resultMap>

<update id="setMemberUpdate" parameterType="MemberDTO">
	UPDATE M.*, MI.*
	FROM MEMBER B
		LEFT OUTER JOIN
		MEMBERIMG MI
		ON (M.ID = MI.ID)
	WHERE N.ID=#{id}
</update>

<delete id="setMemberDelete" parameterType="MemberDTO">
	DELETE MEMBER WHERE ID=#{id}, PW=#{pw}
</delete>

<select id="findId" parameterType="String" resultType="MemberDTO">
	SELECT ID FROM MEMBER WHERE EMAIL=#{email}
</select>

<update id="updatePw" parameterType="MemberDTO">
	UPDATE MEMBER SET PW=#{pw} WHERE ID=#{id}
</update>

</mapper>